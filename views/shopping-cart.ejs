<%- include('./partials/header.ejs') -%>
<%- include('./partials/navbar.ejs') -%>

<% if(usercart) {%>
  
<div class="container">
<table class="table">
    <thead>
      <tr class="table-active">
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center">Product Name</th>
        <th scope="col" class="text-center">Product Quantity</th>
        <th scope="col" class="text-center">Product Price</th>
        <th scope="col" class="text-center">Delet Product</th>
        
      </tr>
    </thead>
    <tbody>
      
      <% if(usercart.selectedProduct && usercart.selectedProduct.length >0 ) {%>
       
      <% usercart.selectedProduct.forEach((user, index )=>{%>
        
        <tr>
          <th scope="row" class="text-center"><%= index+1 %></th>
          <td class="text-center">
            <%= user.name %>
            </td>
          <td class="text-center">
            <% if(user.quantity <= 1) { %>
            <a href="#" class="btn disabled" style="margin-right: 30px"><i class="fas fa-minus-square"></i></a>
          <% } else {%>
              <a href="/decreaseProduct/<%= index%>" class="btn" style="margin-right: 30px"><i class="fas fa-minus-square"></i></a>
              
             <% } %>

             <%= user.quantity %>
            <a href="/increaseProduct/<%= index%>" class="btn" style="margin-left: 30px"><i class="fas fa-plus-square"></i></a>
          </td>
           
          <td class="text-center"> $ <%= user.price %> </td>
          <td class="text-center"> <a href="/deleteProduct/<%= index%>" class="btn btn-danger">delete <i class="fas fa-trash-alt"></i></a></td>
          
        </tr>
    
       <% }) %>
  <%  } %>
        <tr class="table-primary">
        <td colspan="3" style="font-weight: bold">Total Price</td>
        <td style="font-weight: bold" class="text-center ">$ <%= usercart.totalPrice  %> </td>
        </tr>
       
    </tbody>
  </table>
</div>
  <div class="text-center">
    <a href="/checkout" class="btn btn-success" style="width: 200px">Checkout</a>
    </div>
    
    <% } else{ %>

      <h1 class="text-center" style="padding-top: 200px">your Shopping cart is empty</h1>
      <% } %>
    
<%- include('./partials/footer.ejs') -%>