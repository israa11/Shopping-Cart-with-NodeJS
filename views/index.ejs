<%- include('./partials/header.ejs') -%>
<%- include('./partials/navbar.ejs') -%>
<div class="container text-center">
  
  <div class="row ">
    <% products.forEach(product => { %>
      <div class="col-3">
      <div class="card mt-5" >
        <img src="<%= product.imagePath %>" class="card-img-top"  style="max-width: 200px; max-height: 200px;" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= product.productName %></h5>
          <p class="card-text">
            Storage Capacity : <%= product.information.storageCapacity %> GB <br>
                Number Of SIM :<%= product.information.numberOfSIM %> <br>
                Rear Camera Resolution :<%= product.information.cameraResolution %>  MP <br>
                Display Size (Inch) : <%= product.information.displaySize %> Inch 
          </p>
          <div class="float-start fw-bold"><%= product.price %> $</div>
          <% if(checkuser) {%>
          <a href="/addTocart/<%= product._id %>/<%= product.productName %>/<%= product.price %>" class="btn btn-primary  float-end ">Buy</a>
       <% }else{%>
        <a href="/users/signin" class="btn btn-primary  float-end ">Buy</a>
        <% } %>
        </div>
      </div>
      </div>
      <%}) %>
      
    </div>
    

</div>
<%- include('./partials/footer.ejs') -%>